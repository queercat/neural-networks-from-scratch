    "# model a simple neuron with 3 inputs\n",
    "\n",
    "import numpy as np\n",
    "\n",
    "inputs = np.array([1.2, 5.1, 2.1])\n",
    "weights = np.array([3.1, 2.1, 8.7])\n",
    "bias = 3\n",
    "\n",
    "output = sum(inputs * weights) + bias\n",
    "\n",
    "print(output)\n"
